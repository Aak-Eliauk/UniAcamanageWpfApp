<Window x:Class="UniAcamanageWpfApp.TeacherMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:materialDesignAssist="http://materialdesigninxaml.net/winfx/xaml/shared"
        xmlns:Views="clr-namespace:UniAcamanageWpfApp.Views"
        Title="AcademiGo - 教师主页面"
        Icon="Resources/Images/logo.ico"
        Width="1300"
        Height="950"
        MinWidth="900"
        MinHeight="600"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        >

    <!-- 让窗口支持无边框拖拽+圆角 -->
    <WindowChrome.WindowChrome>
        <WindowChrome
            ResizeBorderThickness="5"
            CaptionHeight="0"
            CornerRadius="10"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <!-- 合并 MaterialDesign 资源 -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 包含 MaterialDesign 主题的资源 -->
                <materialDesign:BundledTheme BaseTheme="Light" 
                                             PrimaryColor="Blue" 
                                             SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- ======== 渐变画刷：用于顶部栏 ======== -->
            <LinearGradientBrush x:Key="TopBarGradient" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#3A76D2" Offset="0.0" />
                <GradientStop Color="#2B5CA6" Offset="1.0" />
            </LinearGradientBrush>

            <!-- ======== 渐变画刷：用于侧边栏(可自行调色) ======== -->
            <LinearGradientBrush x:Key="SideNavGradient" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FAFAFA" Offset="0.0" />
                <GradientStop Color="#F0F4FF" Offset="1.0" />
            </LinearGradientBrush>

            <!-- ======== 阴影效果 ======== -->
            <DropShadowEffect x:Key="DropShadowEffect"
                              Color="Gray"
                              ShadowDepth="0"
                              BlurRadius="20"
                              Opacity="0.3"/>

            <!-- 大按钮 Style -->
            <Style x:Key="SideNavLargeButtonStyle" TargetType="Button">
                <!-- 基本 Setter -->
                <Setter Property="MinHeight" Value="60"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Foreground" Value="#333"/>

                <!-- Ripple 效果（已移除 HasRipple 设置） -->

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="6">
                                <!-- 用 ContentPresenter 承载 <Button> 的内部内容 -->
                                <ContentPresenter x:Name="contentPresenter"
                                                  Margin="10,0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- 鼠标悬停改变背景色 -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FFEAEAEA"/>
                                </Trigger>
                                <!-- 按下(可改成更明显效果) -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FFDADADA"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 图标放大效果 -->
            <Style x:Key="SideNavPackIconStyle" TargetType="materialDesign:PackIcon">
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- StackPanel用于图标 + 文字的组合 -->
            <Style x:Key="SideNavStackPanelStyle" TargetType="StackPanel">
                <!-- 默认水平布局(展开时) -->
                <Setter Property="Orientation" Value="Horizontal"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Style.Triggers>
                    <!-- 折叠时改为垂直布局 -->
                    <DataTrigger Binding="{Binding Tag, ElementName=SideNav}" Value="Collapsed">
                        <Setter Property="Orientation" Value="Vertical"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <!-- TextBlock样式 -->
            <Style x:Key="SideNavTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#FF46B8E6"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Visibility" Value="Visible"/>
                <Style.Triggers>
                    <!-- SideNav折叠时隐藏文字 -->
                    <DataTrigger Binding="{Binding Tag, ElementName=SideNav}" Value="Collapsed">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <!-- ========= 外层边框 + 阴影 ========= -->
    <Border CornerRadius="10" Background="White" Effect="{StaticResource DropShadowEffect}">
        <Grid>
            <Grid.RowDefinitions>
                <!-- 顶部栏 -->
                <RowDefinition Height="60"/>
                <!-- 主体 -->
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- ================= 顶部栏(渐变) ================= -->
            <Border Grid.Row="0"
                    Background="{StaticResource TopBarGradient}"
                    CornerRadius="10,10,0,0"
                    MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="240"/>
                    </Grid.ColumnDefinitions>

                    <!-- 左：校徽+软件名 -->
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Grid.Column="0"
                                Margin="10,0,0,0">
                        <Image Source="Resources/Images/school_logo.png"
                               Width="40" Height="40"/>
                        <TextBlock Text="AcademiGo"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 中：子导航栏占位 
                    <TextBlock Text="子导航栏占位符"
                               FontSize="16"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Grid.Column="1"/>
                    -->
                    <!-- 右：用户头像 + 窗口控制 -->
                    <StackPanel Orientation="Horizontal"
                                Grid.Column="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="20,0,0,0"
                                Height="40" Width="220">

                        <!-- 用户头像按钮 -->
                        <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                ToolTip="用户信息"
                                Margin="0,0,20,0"
                                Click="UserAvatarBtn_Click">
                            <materialDesign:PackIcon Kind="Account"/>
                        </Button>

                        <!-- 最小化 -->
                        <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                ToolTip="最小化"
                                Margin="0,0,10,0"
                                Click="MinimizeBtn_Click">
                            <materialDesign:PackIcon Kind="WindowMinimize"/>
                        </Button>

                        <!-- 最大化/还原 -->
                        <Button x:Name="MaxRestoreButton"
                                Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                ToolTip="最大化"
                                Margin="0,0,10,0"
                                Click="MaximizeRestoreBtn_Click">
                            <materialDesign:PackIcon Kind="WindowMaximize"/>
                        </Button>

                        <!-- 关闭 -->
                        <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                ToolTip="关闭"
                                Click="CloseBtn_Click">
                            <materialDesign:PackIcon Kind="Close"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ================ 主体：左侧导航 + 右侧内容 ================ -->
            <Grid Grid.Row="1" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <!-- 初始60, 展开变220 -->
                    <ColumnDefinition x:Name="NavColumn" Width="60"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ====== 左侧导航区(渐变) ====== -->
                <Border x:Name="SideNav"
                        Grid.Column="0"
                        Background="{StaticResource SideNavGradient}">
                    <StackPanel>

                        <!-- 折叠/展开按钮(悬浮圆按钮) -->
                        <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                Width="40" Height="40"
                                Margin="10"
                                HorizontalAlignment="Left"
                                ToolTip="展开/折叠"
                                Click="ToggleNavBtn_Click">
                            <materialDesign:PackIcon Kind="Menu" Width="24" Height="24" Foreground="White"/>
                        </Button>

                        <!-- 标题"应用"(仅在展开时可见) -->
                        <TextBlock Text="应用"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#666"
                                   Margin="12,10,0,10">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Tag, ElementName=SideNav}" Value="Expanded">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- ===== 导航按钮1：首页 ===== -->
                        <Button x:Name="BtnHome"
                                Style="{StaticResource SideNavLargeButtonStyle}"
                                Click="NavButton_Click">
                            <StackPanel Style="{StaticResource SideNavStackPanelStyle}">
                                <materialDesign:PackIcon Style="{StaticResource SideNavPackIconStyle}"
                                                         Kind="Home"
                                                         Width="32" Height="32"
                                                         Margin="0,0,8,0"/>
                                <TextBlock Text="首页"
                                           Style="{StaticResource SideNavTextStyle}" Foreground="#FF333333"/>
                            </StackPanel>
                        </Button>

                        <!-- ===== 按钮2：信息查询 ===== -->
                        <Button x:Name="BtnInfoQuery"
                                Style="{StaticResource SideNavLargeButtonStyle}"
                                Click="NavButton_Click">
                            <StackPanel Style="{StaticResource SideNavStackPanelStyle}">
                                <materialDesign:PackIcon Style="{StaticResource SideNavPackIconStyle}"
                                                         Kind="Magnify" 
                                                         Width="32" Height="32"
                                                         Margin="0,0,8,0" Foreground="#FF007ACC"/>
                                <TextBlock Text="信息查询"
                                           Style="{StaticResource SideNavTextStyle}" Foreground="#007ACC"/>
                            </StackPanel>
                        </Button>

                        <!-- 新增信息管理按钮 -->
                        <Button x:Name="BtnInfoManage"
        Style="{StaticResource SideNavLargeButtonStyle}"
        Click="NavButton_Click">
                            <StackPanel Style="{StaticResource SideNavStackPanelStyle}">
                                <materialDesign:PackIcon Style="{StaticResource SideNavPackIconStyle}"
                                Kind="DatabaseEdit" 
                                Width="32" Height="32"
                                Margin="0,0,8,0" Foreground="#FF9C27B0"/>
                                <TextBlock Text="信息管理"
                   Style="{StaticResource SideNavTextStyle}" Foreground="#FF9C27B0"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnCourseManage"
        Style="{StaticResource SideNavLargeButtonStyle}"
        Click="NavButton_Click">
                            <StackPanel Style="{StaticResource SideNavStackPanelStyle}">
                                <materialDesign:PackIcon Style="{StaticResource SideNavPackIconStyle}"
                                Kind="Teacher" 
                                Width="32" Height="32"
                                Margin="0,0,8,0" Foreground="#FF28A745"/>
                                <TextBlock Text="教学管理"
                   Style="{StaticResource SideNavTextStyle}" Foreground="#FF28A745"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnGradeManage"
        Style="{StaticResource SideNavLargeButtonStyle}"
        Click="NavButton_Click">
                            <StackPanel Style="{StaticResource SideNavStackPanelStyle}">
                                <materialDesign:PackIcon Style="{StaticResource SideNavPackIconStyle}"
                                Kind="ClipboardCheck"
                                Width="32" Height="32"
                                Margin="0,0,8,0" Foreground="#FFF39C12"/>
                                <TextBlock Text="成绩管理"
                   Style="{StaticResource SideNavTextStyle}" Foreground="#FFF39C12"/>
                            </StackPanel>
                        </Button>

                        <!-- ===== 按钮6：教课通 ===== -->
                        <Button x:Name="BtnMap"
                                Style="{StaticResource SideNavLargeButtonStyle}"
                                Click="NavButton_Click">
                            <StackPanel Style="{StaticResource SideNavStackPanelStyle}">
                                <materialDesign:PackIcon Style="{StaticResource SideNavPackIconStyle}"
                                                         Kind="MapMarker"
                                                         Width="32" Height="32"
                                                         Margin="0,0,8,0" Foreground="#FFE74C3C"/>
                                <TextBlock Text="教课通"
                                           Style="{StaticResource SideNavTextStyle}" Foreground="#FFE74C3C"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </Border>

                <!-- ====== 右侧内容区 ====== -->
                <ContentControl x:Name="MainContentPresenter"
                                Grid.Column="1"
                                Margin="10">
                    <!-- 默认：首页 -->
                    <Views:HomeView/>
                </ContentControl>
            </Grid>

            <!-- ================ 用户信息 Popup ================ -->
            <Popup x:Name="UserInfoPopup"
       Placement="Mouse"
       StaysOpen="False"
       AllowsTransparency="True">
                <Border Background="White"
            CornerRadius="10"
            BorderBrush="#3A76D2"
            BorderThickness="1"
            Padding="10">
                    <StackPanel>
                        <TextBlock Text="{Binding TeacherInfo.Name}" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="工号：" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TeacherInfo.TeacherID}" Margin="0,0,0,5"/>
                        <TextBlock Text="职称：" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TeacherInfo.Title}" Margin="0,0,0,5"/>
                        <TextBlock Text="所属院系：" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TeacherInfo.DepartmentName}" Margin="0,0,0,5"/>
                        <Button Content="退出登录"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="0,10,0,0"
                    Click="LogoutButton_Click"/>
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>
    </Border>
</Window>
