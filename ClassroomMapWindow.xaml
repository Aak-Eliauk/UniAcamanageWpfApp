<Window x:Class="UniAcamanageWpfApp.ClassroomMapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="教室位置" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="10">
            <TextBlock x:Name="txtClassroomInfo"
                       VerticalAlignment="Center"
                       Margin="0,0,20,0"
                       FontSize="16"/>

            <!-- 缩放控制按钮 -->
            <Button x:Name="btnZoomIn"
                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                    Margin="5,0"
                    Click="BtnZoomIn_Click"
                    ToolTip="放大">
                <materialDesign:PackIcon Kind="Plus"/>
            </Button>

            <Button x:Name="btnZoomOut"
                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                    Margin="5,0"
                    Click="BtnZoomOut_Click"
                    ToolTip="缩小">
                <materialDesign:PackIcon Kind="Minus"/>
            </Button>

            <Button x:Name="btnResetView"
                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                    Margin="5,0"
                    Click="BtnResetView_Click"
                    ToolTip="重置视图">
                <materialDesign:PackIcon Kind="Refresh"/>
            </Button>
        </StackPanel>

        <!-- 地图控件 -->
        <wv2:WebView2 x:Name="webView"
                      Grid.Row="1"/>
    </Grid>
</Window>