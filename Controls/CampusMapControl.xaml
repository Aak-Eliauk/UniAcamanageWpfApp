<UserControl x:Class="UniAcamanageWpfApp.Controls.CampusMapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="#F5F9FF">

    <UserControl.Resources>
        <!-- 基础颜色 -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#3A76D2"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#2B5CA6"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>

        <!-- 搜索框样式 -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox" 
               BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Height" Value="56"/>
            <Setter Property="Padding" Value="12,8,12,0"/>
            <Setter Property="materialDesign:HintAssist.FloatingScale" Value="0.85"/>
            <Setter Property="materialDesign:TextFieldAssist.TextFieldCornerRadius" Value="4"/>
        </Style>

        <!-- 按钮样式 -->
        <Style x:Key="AnimatedButtonStyle" TargetType="Button"
               BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8"/>
        </Style>

        <!-- ComboBox样式 -->
        <Style x:Key="CommonComboBoxStyle" TargetType="ComboBox"
               BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Height" Value="56"/>
            <Setter Property="Padding" Value="12,8,12,0"/>
            <Setter Property="materialDesign:HintAssist.FloatingScale" Value="0.85"/>
            <Setter Property="materialDesign:TextFieldAssist.TextFieldCornerRadius" Value="4"/>
        </Style>

        <!-- Tab样式 -->
        <Style x:Key="CustomTabStyle" TargetType="TabItem"
               BasedOn="{StaticResource MaterialDesignNavigationRailTabItem}">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#F5F9FF"/>
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧功能面板 -->
        <materialDesign:Card x:Name="mainTabControl" Grid.Column="0" 
                            Margin="16"
                            UniformCornerRadius="8"
                            Background="White"
                            materialDesign:ElevationAssist.Elevation="Dp1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 功能选项卡 -->
                <TabControl Grid.Row="0" 
                          Style="{StaticResource MaterialDesignFilledTabControl}"
                          Background="Transparent">
                    <!-- 查询模块 -->
                    <TabItem Header="查询" Style="{StaticResource CustomTabStyle}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="16">
                                <!-- 搜索查询子模块 -->
                                <materialDesign:Card Margin="0,0,0,16" UniformCornerRadius="4">
                                    <StackPanel Margin="16">
                                        <TextBlock Text="搜索查询"
                             FontSize="16"
                             FontWeight="Medium"
                             Margin="0,0,0,16"/>

                                        <!-- 综合搜索框 -->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="txtSearch"
                                Style="{StaticResource SearchBoxStyle}"
                                materialDesign:HintAssist.Hint="搜索地点、建筑、设施..."
                                TextChanged="TxtSearch_TextChanged"
                                Margin="0,0,8,0"/>
                                            <Button Grid.Column="1"
                                Style="{StaticResource AnimatedButtonStyle}"
                                Content="搜索"/>
                                        </Grid>

                                        <!-- 设施类型筛选 -->
                                        <WrapPanel x:Name="facilityTypePanel" Margin="0,16,0,0">
                                            <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}"
                                    Content="教学楼"
                                    Margin="0,0,8,8"/>
                                            <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}"
                                    Content="图书馆"
                                    Margin="0,0,8,8"/>
                                            <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}"
                                    Content="食堂"
                                    Margin="0,0,8,8"/>
                                            <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}"
                                    Content="体育场"
                                    Margin="0,0,8,8"/>
                                            <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}"
                                    Content="实验室"
                                    Margin="0,0,8,8"/>
                                            <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}"
                                    Content="其他"
                                    Margin="0,0,8,8"/>
                                        </WrapPanel>

                                        <!-- 搜索结果列表 -->
                                        <materialDesign:Card x:Name="searchResultsCard"
                                      Visibility="Collapsed"
                                      Margin="0,16,0,0"
                                      UniformCornerRadius="4">
                                            <ListView x:Name="searchResultsList"
                                MaxHeight="300"
                                SelectionChanged="SearchResults_SelectionChanged">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="8,4">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <materialDesign:PackIcon Kind="{Binding IconKind}"
                                                               Width="24"
                                                               Height="24"
                                                               Margin="0,0,8,0"
                                                               VerticalAlignment="Center"/>
                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="{Binding DisplayName}"
                                                     FontWeight="Medium"
                                                     FontSize="14"/>
                                                                <TextBlock Text="{Binding Category}"
                                                     FontSize="12"
                                                     Foreground="{StaticResource SecondaryBrush}"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </materialDesign:Card>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- 教室查询子模块 -->
                                <materialDesign:Card UniformCornerRadius="4">
                                    <StackPanel Margin="16">
                                        <TextBlock Text="教室查询"
                             FontSize="16"
                             FontWeight="Medium"
                             Margin="0,0,0,16"/>

                                        <!-- 教学楼选择 -->
                                        <ComboBox x:Name="cmbBuilding"
                            Style="{StaticResource CommonComboBoxStyle}"
                            materialDesign:HintAssist.Hint="选择教学楼"
                            SelectionChanged="CmbBuilding_SelectionChanged"
                            Margin="0,0,0,16"/>

                                        <!-- 楼层筛选（可选） -->
                                        <WrapPanel x:Name="floorFilterPanel"
                             Margin="0,0,0,16">
                                            <RadioButton Content="全部"
                                   Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}"
                                   IsChecked="True"
                                   Margin="0,0,8,0"/>
                                            <!-- 动态添加楼层选项 -->
                                        </WrapPanel>

                                        <!-- 教室列表 -->
                                        <materialDesign:Card>
                                            <ListView x:Name="listClassrooms" Grid.Row="2">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Expander Header="{Binding Building}">
                                                            <ItemsControl ItemsSource="{Binding Classrooms}">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Grid Margin="0,2">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                            </Grid.ColumnDefinitions>
                                                                            <TextBlock>
                                    <Run Text="{Binding RoomNumber}"/>
                                    <Run Text=" ("/>
                                    <Run Text="{Binding Floor}"/>
                                    <Run Text="楼)"/>
                                                                            </TextBlock>
                                                                            <Button Grid.Column="1" 
                                        Content="定位"
                                        Click="BtnLocateClassroom_Click"
                                        Style="{StaticResource MaterialDesignFlatButton}"/>
                                                                        </Grid>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </Expander>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </materialDesign:Card>
                                    </StackPanel>
                                </materialDesign:Card>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!-- 导航模块 -->
                    <TabItem x:Name="tabNavigation" Header="导航" Style="{StaticResource CustomTabStyle}">
                        <StackPanel Margin="16">
                            <!-- 起点 -->
                            <TextBox x:Name="txtStartPoint"
                                   Style="{StaticResource SearchBoxStyle}"
                                   materialDesign:HintAssist.Hint="起点"
                                   Margin="0,0,0,8"/>
                            <Button x:Name="btnSelectStart" Content="选择起点"
                                    Style="{StaticResource AnimatedButtonStyle}"
                                    Click="BtnSelectStart_Click"
                                    Margin="0,0,0,16"/>

                            <!-- 状态提示文本 -->
                            <TextBlock x:Name="statusText" 
                   Margin="0,8,0,8"
                   TextAlignment="Center"
                   Foreground="{StaticResource SecondaryBrush}"/>

                            <!-- 终点 -->
                            <TextBox x:Name="txtEndPoint"
                                   Style="{StaticResource SearchBoxStyle}"
                                   materialDesign:HintAssist.Hint="终点"
                                   Margin="0,0,0,8"/>
                            <Button x:Name="btnSelectEnd" Content="选择终点"
                                    Style="{StaticResource AnimatedButtonStyle}"
                                    Click="BtnSelectEnd_Click"
                                    Margin="0,0,0,16"/>

                            <!-- 导航选项 -->
                            <StackPanel Orientation="Horizontal" 
                                      Margin="0,0,0,16"
                                      HorizontalAlignment="Center">
                                <RadioButton x:Name="rbWalking" 
                                           Content="步行"
                                           Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}"
                                           IsChecked="True"
                                           Margin="0,0,16,0"/>
                                <RadioButton x:Name="rbCycling"
                                           Content="骑行"
                                           Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}"/>
                            </StackPanel>

                            <!-- 规划路线按钮 -->
                            <Button Content="规划路线"
                                    Style="{StaticResource AnimatedButtonStyle}"
                                    Click="BtnPlanRoute_Click"/>

                            <!-- 路线信息 -->
                            <materialDesign:Card Margin="0,16,0,0"
                                              Padding="16"
                                              UniformCornerRadius="4">
                                <TextBlock x:Name="txtRouteInfo"
                                         TextWrapping="Wrap"/>
                            </materialDesign:Card>
                        </StackPanel>
                    </TabItem>

                    <!-- 教课通模块 -->
                    <TabItem Header="教课通" Style="{StaticResource CustomTabStyle}">
                        <StackPanel Margin="16">
                            <!-- 当前课程 -->
                            <materialDesign:Card Margin="0,0,0,16"
                                              Padding="16"
                                              UniformCornerRadius="4">
                                <StackPanel>
                                    <TextBlock Text="当前课程"
                                             FontWeight="Medium"
                                             FontSize="16"
                                             Margin="0,0,0,8"/>
                                    <ListView x:Name="currentClassList">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding CourseName}"
                                                                 FontWeight="Medium"/>
                                                        <TextBlock>
                                                            <Run Text="{Binding TimeSlot}"/>
                                                            <Run Text=" | "/>
                                                            <Run Text="{Binding Classroom}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <Button Grid.Column="1"
                                                            Style="{StaticResource MaterialDesignFlatButton}"
                                                            Content="签到"
                                                            Margin="8,0,0,0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- 即将开始的课程 -->
                            <Expander Header="即将开始的课程"
                                     Style="{StaticResource MaterialDesignExpander}">
                                <ListView x:Name="upcomingClassList">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding CourseName}"
                                                             FontWeight="Medium"/>
                                                    <TextBlock>
                                                        <Run Text="{Binding TimeSlot}"/>
                                                        <Run Text=" | "/>
                                                        <Run Text="{Binding Classroom}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                                <Button Grid.Column="1"
                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                        Content="查看位置"
                                                        Margin="8,0,0,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Expander>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Grid>
        </materialDesign:Card>

        <!-- 地图控件 -->
        <materialDesign:Card Grid.Column="1"
                           Margin="0,16,16,16"
                           UniformCornerRadius="8"
                           ClipToBounds="True">
            <Grid>
                <wv2:WebView2 x:Name="webView"/>

                <!-- 地图控制按钮 -->
                <StackPanel VerticalAlignment="Top"
                          HorizontalAlignment="Right"
                          Margin="16">
                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                            Click="BtnZoomIn_Click"
                            Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Plus"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                            Click="BtnZoomOut_Click"
                            Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Minus"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                            Click="BtnResetView_Click"
                            Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Home"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                            Click="BtnShowAllBuildings_Click">
                        <materialDesign:PackIcon Kind="ViewModule"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>