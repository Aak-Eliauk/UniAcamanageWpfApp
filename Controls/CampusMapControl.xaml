<UserControl x:Class="UniAcamanageWpfApp.Controls.CampusMapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧面板 -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 搜索框和类型选择 -->
            <StackPanel Grid.Row="0" Margin="10">
                <TextBox x:Name="txtSearch" 
                         Height="30" 
                         Margin="0,0,0,5"
                         TextChanged="TxtSearch_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Resources>
                                <VisualBrush x:Key="HintBrush" TileMode="None" Opacity="0.5" Stretch="None" AlignmentX="Left">
                                    <VisualBrush.Visual>
                                        <TextBlock Text="搜索教室或地点..."/>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Style.Resources>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background" Value="{StaticResource HintBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <ComboBox x:Name="cmbBuildingType" 
                         Height="30"
                         SelectionChanged="CmbBuildingType_SelectionChanged">
                    <ComboBoxItem Content="全部"/>
                    <ComboBoxItem Content="普通教室"/>
                    <ComboBoxItem Content="实验室"/>
                    <ComboBoxItem Content="会议室"/>
                </ComboBox>

                <ListView x:Name="searchResultsList"
                         MaxHeight="200"
                         Visibility="Collapsed"
                         SelectionChanged="SearchResults_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding DisplayName}" 
                                         FontWeight="Bold"/>
                                <TextBlock Text="{Binding Category}" 
                                         FontSize="11"
                                         Opacity="0.7"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <!-- 教室列表 -->
            <ListView x:Name="listBuildings"
                     Grid.Row="1"
                     Margin="10"
                     SelectionChanged="ListBuildings_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding RoomNumber}" 
                                     FontWeight="Bold"/>
                            <TextBlock Text="{Binding SpatialLocation}" 
                                     TextWrapping="Wrap"
                                     Opacity="0.7"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- 地图 -->
        <wv2:WebView2 x:Name="webView" 
                     Grid.Column="1"/>
    </Grid>
</UserControl>