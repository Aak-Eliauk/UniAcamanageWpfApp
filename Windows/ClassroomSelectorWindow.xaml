<Window x:Class="UniAcamanageWpfApp.Windows.ClassroomSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="选择教室" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Grid Grid.Row="0" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 搜索框 -->
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtSearch"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="搜索教室..."
                         TextChanged="TxtSearch_TextChanged"
                         Margin="0,0,8,0"/>
                <Button Grid.Column="1"
                        Style="{StaticResource MaterialDesignOutlinedButton}">
                    <materialDesign:PackIcon Kind="Search"/>
                </Button>
            </Grid>

            <!-- 控制按钮 -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal">
                <Button x:Name="btnZoomIn"
                        Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                        Margin="4,0"
                        Click="BtnZoomIn_Click"
                        ToolTip="放大">
                    <materialDesign:PackIcon Kind="Plus"/>
                </Button>
                <Button x:Name="btnZoomOut"
                        Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                        Margin="4,0"
                        Click="BtnZoomOut_Click"
                        ToolTip="缩小">
                    <materialDesign:PackIcon Kind="Minus"/>
                </Button>
                <Button x:Name="btnResetView"
                        Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                        Margin="4,0"
                        Click="BtnResetView_Click"
                        ToolTip="重置视图">
                    <materialDesign:PackIcon Kind="Refresh"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 搜索结果列表 -->
        <ListView x:Name="searchResultsList"
                  Grid.Row="0"
                  MaxHeight="200"
                  Margin="16,60,16,0"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  SelectionChanged="SearchResults_SelectionChanged"
                  Visibility="Collapsed">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="{Binding IconKind}"
                                               Width="24"
                                               Height="24"
                                               VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" 
                                  Margin="12,0,0,0">
                            <TextBlock Text="{Binding DisplayName}"
                                     FontWeight="Medium"/>
                            <TextBlock Text="{Binding Category}"
                                     Opacity="0.6"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- 地图控件 -->
        <wv2:WebView2 x:Name="webView"
                      Grid.Row="1"/>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" 
            Orientation="Horizontal" 
            HorizontalAlignment="Right"
            Margin="16">
            <TextBlock x:Name="txtSelectedClassroom"
              VerticalAlignment="Center"
              Margin="0,0,16,0"
              FontSize="16"/>
            <!-- 添加取消选择按钮 -->
            <Button x:Name="btnClearSelection"
                Content="取消选择"
                Style="{StaticResource MaterialDesignOutlinedButton}"
                Margin="8,0"
                Click="BtnClearSelection_Click"
                Visibility="Collapsed"/>
            <Button Content="取消"
            Style="{StaticResource MaterialDesignOutlinedButton}"
            Margin="8,0"
            Click="BtnCancel_Click"/>
            <Button Content="确定"
            Style="{StaticResource MaterialDesignRaisedButton}"
            Click="BtnConfirm_Click"/>
        </StackPanel>
        
    </Grid>
</Window>