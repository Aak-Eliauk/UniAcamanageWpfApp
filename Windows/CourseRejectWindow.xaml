<Window x:Class="UniAcamanageWpfApp.Windows.CourseRejectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="退选原因"
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Window.Resources>
        <!-- 颜色定义 -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#3A76D2"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#F44336"/>

        <!-- 按钮样式 -->
        <Style x:Key="ActionButtonStyle" 
               TargetType="Button" 
               BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>

    <materialDesign:Card Margin="16" 
                        UniformCornerRadius="15"
                        Background="White"
                        materialDesign:ElevationAssist.Elevation="Dp1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题 -->
            <TextBlock Grid.Row="0"
                      Text="退选原因"
                      FontSize="24"
                      FontWeight="Bold"
                      Foreground="#333333"
                      Margin="0,0,0,8"/>

            <!-- 学生信息 -->
            <StackPanel Grid.Row="1" 
                        Margin="0,0,0,16">
                <TextBlock x:Name="StudentInfoText"
                         FontSize="14"
                         Foreground="#666666"/>
                <TextBlock x:Name="CourseInfoText"
                         FontSize="14"
                         Foreground="#666666"
                         Margin="0,4,0,0"/>
            </StackPanel>

            <!-- 退选原因输入 -->
            <TextBox Grid.Row="2"
                     x:Name="RejectReasonText"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="请输入退选原因（必填）"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Height="Auto"
                     Margin="0,0,0,16"/>

            <!-- 按钮区域 -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="取消"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="Gray"
                        Click="CancelButton_Click"/>
                <Button Content="确认"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="{StaticResource DangerBrush}"
                        Click="ConfirmButton_Click"/>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>